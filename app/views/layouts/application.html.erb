      window.oldLogoURL = "<%= image_url('oldlogo.png') %>";
      window.dogLogoURL = "<%= image_url('doglogo.png') %>";
      window.homeURL = "<%= image_url('home.png') %>";
      window.userURL = "<%= image_url('user.png') %>";
      window.tennisURL = "<%= image_url('tennis.jpg') %>";
      window.smugURL = "<%= image_url('smug.png') %>";
      window.pawHeartURL = "<%= image_url('pawheart.png') %>";
      window.handHoldURL = "<%= image_url('handhold.png') %>";
      window.brainURL = "<%= image_url('brain.png') %>";
